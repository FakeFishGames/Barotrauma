<?xml version="1.0" encoding="utf-8" ?>
<Randomevents>

  <!-- easyish basic event set (a bunch of crawlers, mantises and a thresher) -->
  <EventSet
    minleveldifficulty="0"
    maxleveldifficulty="20"
    chooserandom="false">    
    <Commonness commonness="5">
      <Override leveltype="Ridge" commonness="10"/>
      <Override leveltype="Wastes" commonness="10"/>
      <Override leveltype="Open" commonness="2"/>      
    </Commonness>

    <!-- always spawn a couple of artifacts  -->
    <ArtifactEvent itemname="Skyholder Artifact"/>
    <ArtifactEvent itemname="Thermal Artifact"/>
    <ArtifactEvent itemname="Faraday Artifact"/>

    <!-- chance of a couple of fractal guardians inside ruins -->
    <MonsterEvent
      characterfile="Content/Characters/Fractalguardian/fractalguardian.xml"
      minamount="0" maxamount="1"
      spawntype="ruin"
      musictype="monster">
    </MonsterEvent>

    <MonsterEvent
      characterfile="Content/Characters/Fractalguardian2/fractalguardian2.xml"
      minamount="0" maxamount="1"
      spawntype="ruin"
      musictype="monster">
    </MonsterEvent>

    <!-- 2-3 crawlers or 2 mantises after the sub has passed 10% of the level or 5 minutes have passed -->
    <EventSet
      chooserandom="true"
      mindistancetraveled="0.1"
      minmissiontime="300">
      <MonsterEvent
        characterfile="Content/Characters/Crawler/crawler.xml"
        minamount="2" maxamount="3"
        spawntype="mainpath,ruin"
        musictype="monster">
      </MonsterEvent>
      <MonsterEvent
        characterfile="Content/Characters/Mantis/mantis.xml"
        minamount="1" maxamount="2"
        spawntype="mainpath,ruin"
        musictype="monster">
      </MonsterEvent>
    </EventSet>

    <!-- 4-6 crawlers and 1 mantis after 12 minutes or passing 40% -->
    <EventSet
      chooserandom="false"
      mindistancetraveled="0.4"
      minmissiontime="720">
      <MonsterEvent
        characterfile="Content/Characters/Crawler/crawler.xml"
        minamount="4" maxamount="6"
        spawntype="mainpath,ruin"
        musictype="monster">
      </MonsterEvent>
      <MonsterEvent
        characterfile="Content/Characters/Mantis/mantis.xml"
        minamount="1" maxamount="1"
        spawntype="mainpath,ruin"
        musictype="monster">
      </MonsterEvent>
    </EventSet>

    <!-- one thresher after 17 minutes or passing 60% -->
    <EventSet
      chooserandom="false"
      mindistancetraveled="0.6"
      minmissiontime="1020">
      <MonsterEvent
        characterfile="Content/Characters/Tigerthresher/tigerthresher.xml"
        spawntype="mainpath"
        musictype="monster">
      </MonsterEvent>
    </EventSet>
  </EventSet>

  <EventSet
    minleveldifficulty="10"
    maxleveldifficulty="100"
    chooserandom="false">
    <Commonness commonness="5">
      <Override leveltype="Ridge" commonness="10"/>
      <Override leveltype="Wastes" commonness="10"/>
      <Override leveltype="Open" commonness="2"/>
    </Commonness>

    <!-- always spawn a couple of artifacts  -->
    <ArtifactEvent itemname="Skyholder Artifact"/>
    <ArtifactEvent itemname="Thermal Artifact"/>
    <ArtifactEvent itemname="Faraday Artifact"/>

    <!-- chance of a couple of fractal guardians inside ruins -->
    <MonsterEvent
      characterfile="Content/Characters/Fractalguardian/fractalguardian.xml"
      minamount="1" maxamount="2"
      spawntype="ruin"
      musictype="monster">
    </MonsterEvent>

    <MonsterEvent
      characterfile="Content/Characters/Fractalguardian2/fractalguardian2.xml"
      minamount="0" maxamount="1"
      spawntype="ruin"
      musictype="monster">
    </MonsterEvent>

    <!-- 4-6 crawlers and 2 mantises after the sub has passed 10% of the level or 5 minutes have passed -->
    <EventSet
      chooserandom="true"
      mindistancetraveled="0.1"
      minmissiontime="300">
      <MonsterEvent
        characterfile="Content/Characters/Crawler/crawler.xml"
        minamount="2" maxamount="3"
        spawntype="mainpath,ruin"
        musictype="monster">
      </MonsterEvent>
      <MonsterEvent
        characterfile="Content/Characters/Mantis/mantis.xml"
        minamount="1" maxamount="2"
        spawntype="mainpath,ruin"
        musictype="monster">
      </MonsterEvent>
    </EventSet>

    <!-- one moloch after 12 minutes or passing 40% -->
    <EventSet
      chooserandom="false"
      mindistancetraveled="0.4"
      minmissiontime="720">
      <MonsterEvent
        characterfile="Content/Characters/Moloch/moloch.xml"
        minamount="1" maxamount="1"
        spawntype="mainpath"
        musictype="monster">
      </MonsterEvent>
    </EventSet>

    <!-- 2 threshers or 3 mantises after 17 minutes or passing 60% -->
    <EventSet
      chooserandom="false"
      mindistancetraveled="0.6"
      minmissiontime="1020">
      <MonsterEvent
        characterfile="Content/Characters/Tigerthresher/tigerthresher.xml"
        minamount="2" maxamount="2"
        spawntype="mainpath"
        musictype="monster">
      </MonsterEvent>
      <MonsterEvent
        characterfile="Content/Characters/Mantis/mantis.xml"
        minamount="3" maxamount="3"
        spawntype="mainpath,ruin"
        musictype="monster">
      </MonsterEvent>
    </EventSet>
  </EventSet>

  <!-- 
  Crawler x4-6 inside caves
    - common in most level types 
    - can be spawned as mid-round random event
  -->
  <MonsterEvent
    characterfile="Content/Characters/Crawler/crawler.xml"
    difficulty="5"
    minamount="4" maxamount="6"
    spawntype="cave"
    musictype="monster">
    <InitialCount min="0" max="2"/>
    <Midround commonness="1.0">
      <Override leveltype="Ridge" commonness="2.0"/>
      <Override leveltype="Wastes" commonness="2.0"/>
      <Override leveltype="Open" commonness="0.5"/>
    </Midround>
  </MonsterEvent>

  <!-- 
  Crawler x10-12
    - only used as a slightly harder mid-round random event
  -->
  <MonsterEvent
    characterfile="Content/Characters/Crawler/crawler.xml"
    difficulty="11"
    minamount="10" maxamount="12"
    spawntype="mainpath"
    musictype="monster">
    <InitialCount min="0" max="0"/>
    <Midround commonness="1.0">
      <Override leveltype="Ridge" commonness="2.0"/>
      <Override leveltype="Wastes" commonness="2.0"/>
      <Override leveltype="Open" commonness="0.5"/>
    </Midround>
  </MonsterEvent>

  <!-- 
  Tiger thresher x1
    - can only appear initially in Ridge levels
    - a fairly common low difficulty mid-round random event
  -->
  <MonsterEvent
    characterfile="Content/Characters/Tigerthresher/tigerthresher.xml"
    difficulty="8"
    spawntype="mainpath"
    musictype="monster">
    <InitialCount max="0">
      <Override leveltype="Ridge" min="0" max="2"/>
    </InitialCount>
    <Midround commonness="0.5">
      <Override leveltype="Open" commonness="1.0"/>
    </Midround>
  </MonsterEvent>

  <!-- 
  Tiger thresher x2-3
    - a fairly common mid-round random event
  -->
  <MonsterEvent
    characterfile="Content/Characters/Tigerthresher/tigerthresher.xml"
    minamount="2" maxamount="3"
    difficulty="16"
    spawntype="mainpath"
    musictype="monster">
    <Midround commonness="0.5"/>
  </MonsterEvent>
  
  <!-- 
  Moloch x1
    - doesn't appear initially in any level
    - a semi-rare random event
    - common random event in Open levels
  -->
  <MonsterEvent
    characterfile="Content/Characters/Moloch/moloch.xml"
    difficulty="20"
    spawntype="mainpath"
    musictype="monster">    
    <InitialCount max="0"/>
    <Midround commonness="0.2">
      <Override leveltype="Ridge" commonness="0.1"/>
      <Override leveltype="Open" commonness="1.0"/>
    </Midround>
  </MonsterEvent>
  
  <!-- 
  Mantis x1-2
    - can appear initially in any type of level
    - a common mid-round random event
  -->
  <MonsterEvent
    characterfile="Content/Characters/Mantis/mantis.xml"
    difficulty="10"
    minamount="1" maxamount="2"
    spawntype="mainpath,ruin"
    musictype="monster">
    <InitialCount min="0" max="2">
      <Override leveltype="Ridge" min="5" max="6"/>
      <Override leveltype="Wastes" min="5" max="6"/>
      <Override leveltype="Open" min="-5" max="1"/>
    </InitialCount>
    <Midround commonness="0.8">
      <Override leveltype="Ridge" commonness="1.6"/>
      <Override leveltype="Wastes" commonness="1.6"/>
      <Override leveltype="Open" commonness="0.2"/>
    </Midround>
  </MonsterEvent>

  <!-- 
  Mantis x2-3 inside caves
    - can appear initially in any level type
    - somewhat common mid-round random event in all level types
  -->
  <MonsterEvent
    characterfile="Content/Characters/Mantis/mantis.xml"
    difficulty="12"
    minamount="2" maxamount="3"
    spawntype="cave"
    musictype="monster">
    <InitialCount min="0" max="1"/>
    <Midround commonness="0.5"/>
  </MonsterEvent>

  <!-- 
  Coelanth x1 below the level
    - can appear initially in most level types
    - somewhat rare mid-round event
  -->
  <MonsterEvent
    characterfile="Content/Characters/Coelanth/coelanth.xml"
    difficulty="8"
    minamount="1" maxamount="1"
    spawndeep="true"
    spawntype="mainpath"
    musictype="monster">
    <InitialCount min="0" max="3"/>
    <Midround commonness="0.2"/>
  </MonsterEvent>
  
  <!-- 
  Charybdis x1 below the level
    - rare event that can appear initially in most level types
    - somewhat rare mid-round event
  -->
  <MonsterEvent
    characterfile="Content/Characters/Charybdis/charybdis.xml"
    difficulty="15"
    minamount="1" maxamount="1"
    spawntype="mainpath"
    spawndeep="true"
    musictype="monster">
    <InitialCount min="-5" max="2">
      <Override leveltype="Ridge" max="0"/>
    </InitialCount>
    <Midround commonness="0.2"/>
  </MonsterEvent>

  <!-- 
  Charybdis x2 below the level
    - doesn't appear initially in any level
    - somewhat rare mid-round event
  -->
  <MonsterEvent
    characterfile="Content/Characters/Charybdis/charybdis.xml"
    difficulty="15"
    minamount="2" maxamount="2"
    spawntype="mainpath"
    spawndeep="true"
    musictype="monster">
    <InitialCount max="0">
      <Override leveltype="Open" min="0" max="3"/>
    </InitialCount>
    <Midround commonness="0.2"/>
  </MonsterEvent>

  <!-- 
  Endworm x1 below the level
    - can rarely appear initially in all level types except Ridge
    - somewhat rare high-difficulty mid-round event
  -->
  <MonsterEvent
    characterfile="Content/Characters/Endworm/endworm.xml"
    difficulty="50"
    minamount="1" maxamount="1"
    spawntype="mainpath"
    spawndeep="true"
    musictype="deep">
    <InitialCount min="-5" max="1">
      <Override leveltype="Ridge" max="0"/>
    </InitialCount>
    <Midround commonness="0.2"/>
  </MonsterEvent>

  <!-- 
  Endworm x1 inside the level
    - can rarely appear in Open levels
    - somewhat rare high-difficulty mid-round event
  -->
  <MonsterEvent
    characterfile="Content/Characters/Endworm/endworm.xml"
    difficulty="50"
    minamount="1" maxamount="1"
    spawntype="mainpath"
    musictype="deep">
    <InitialCount max="0">
      <Override leveltype="Open" min="-2" max="1"/>
    </InitialCount>
    <Midround commonness="0.2"/>
  </MonsterEvent>

  <!-- 
  Watcher x1-3
    - rare initial event that can appear in all levels except Ridge and Wastes
    - a rare low-difficulty mid-round event
  -->
  <MonsterEvent
    characterfile="Content/Characters/Watcher/watcher.xml"
    difficulty="3"
    spawntype="mainpath,cave"
    minamount="1" maxamount="3">
    <InitialCount min="-3" max="1">
      <Override leveltype="Ridge" max="0"/>
      <Override leveltype="Wastes" max="0"/>
    </InitialCount>
    <Midround commonness="0.2">
      <Override leveltype="Ridge" commonness="0.0"/>
      <Override leveltype="Wastes" commonness="0.0"/>
    </Midround>  
  </MonsterEvent>

  <!-- 
  Husk x2-3
    - can appear initially in any type of level, more common in Wastes
    - a medium-commonness mid-round event
  -->
  <MonsterEvent
    characterfile="Content/Characters/Husk/husk.xml"
    difficulty="5"
    minamount="2" maxamount="3"
    spawntype="mainpath,ruin"
    musictype="monster">
    <InitialCount min="-2" max="3">
      <Override leveltype="Wastes" min="1" max="3"/>
    </InitialCount>
    <Midround commonness="0.5">
      <Override leveltype="Wastes" commonness="1.0"/>
      <Override leveltype="Open" commonness="0.5"/>
    </Midround>
  </MonsterEvent>

  <!-- 
  Husk x2-6 inside caves
    - can rarely appear in all level types
    - a medium-commonness mid-round event
  -->
  <MonsterEvent
    characterfile="Content/Characters/Husk/husk.xml"
    minamount="2" maxamount="6"
    spawntype="cave"
    musictype="monster">
    <InitialCount min="-1" max="1"/>
    <Midround commonness="0.5"/>
  </MonsterEvent>

  <!-- 
  Fractalguardian x1 inside ruins
    - appears in all level types
  -->
  <MonsterEvent
    characterfile="Content/Characters/Fractalguardian/fractalguardian.xml"
    minamount="1" maxamount="1"
    spawntype="ruin"
    musictype="monster">
    <InitialCount min="1" max="2"/>
  </MonsterEvent>

  <!-- 
  Fractalguardian2 x1 inside ruins
    - appears in all level types
  -->
  <MonsterEvent
    characterfile="Content/Characters/Fractalguardian2/fractalguardian2.xml"
    minamount="1" maxamount="1"
    spawntype="ruin"
    musictype="monster">
    <InitialCount min="1" max="2"/>
  </MonsterEvent>

  <!-- 
  Carrier x1
    - a rare medium-difficulty mid-round random event
  -->
  <MonsterEvent
    characterfile="Content/Characters/Carrier/carrier.xml"
    difficulty="30"
    spawntype="mainpath"
    musictype="monster">
    <InitialCount max="0"/>
    <Midround commonness="0.2"/>
  </MonsterEvent>

  <ArtifactEvent name="Artifact" description=""
    itemname="Skyholder Artifact">
    <InitialCount min="0" max="5"/>
  </ArtifactEvent>

  <ArtifactEvent name="Artifact" description=""
    itemname="Thermal Artifact">
    <InitialCount min="0" max="5"/>
  </ArtifactEvent>

  <ArtifactEvent name="Artifact" description=""
    itemname="Faraday Artifact">
    <InitialCount min="0" max="8"/>
  </ArtifactEvent>

  <ArtifactEvent name="Artifact" description=""
    itemname="Nasonov Artifact">
    <InitialCount min="0" max="2"/>
