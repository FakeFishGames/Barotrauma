<Items>
  <Item
    name="Button"    
    identifier="button"
    category="Electrical"
    tags="smallitem"
    cargocontaineridentifier="metalcrate">
    
    <Price locationtype="Research" buyprice="10"/>
    <Price locationtype="City" buyprice="20"/>
    <Price locationtype="Military" buyprice="20"/>
    <Price locationtype="Outpost" buyprice="20"/>
    
    <Sprite texture ="button.png" sourcerect="0,0,24,27" depth="0.8"/>

    <Deconstruct time="10">
      <Item identifier="steelbar"/>
      <Item identifier="fpgacircuit"/>
    </Deconstruct>

    <Body width="32" height="32" density="40"/>

    <Controller direction ="None" canbepicked = "true" msg="ItemMsgPressSelect">
      <RequiredItem identifier="idcard" type="Picked" msg="ItemMsgUnauthorizedAccess"/>
      <sound file="Content/Items/Button/beep.ogg" type="OnUse" range="500.0"/>
    </Controller>

    <ConnectionPanel selectkey="Action" canbeselected = "true" msg="ItemMsgRewireScrewdriver" hudpriority="10">
      <GuiFrame relativesize="0.2,0.32" minsize="400,350" maxsize="480,420" anchor="Center" style="ConnectionPanel"/>
      <RequiredItem identifier="screwdriver" type="Equipped"/>
      <output name="signal_out"/>
    </ConnectionPanel>

    <Holdable selectkey="Select" pickkey="Use" slots="Any,RightHand,LeftHand" msg="ItemMsgDetachWrench" PickingTime="10.0"
              aimpos="35,-10" handle1="0,0" attachable="true" attachedbydefault="true" aimable="true">
      <requireditem identifier="wrench" type="Equipped"/>
    </Holdable>
  </Item>

  <Item
    name="Switch"
    identifier="switch"
    category="Electrical"
    tags="smallitem"
    cargocontaineridentifier="metalcrate">

    <Price locationtype="Research" buyprice="10"/>
    <Price locationtype="City" buyprice="20"/>
    <Price locationtype="Military" buyprice="20"/>
    <Price locationtype="Outpost" buyprice="20"/>

    <InventoryIcon texture="Content/Items/InventoryIconAtlas.png" sourcerect="192,448,64,64"/>
    <Sprite texture ="button.png" sourcerect="24,0,12,16" depth="0.79"/>

    <Deconstruct time="10">
      <Item identifier="steelbar"/>
      <Item identifier="fpgacircuit"/>
    </Deconstruct>

    <Body width="12" height="16" density="20"/>

    <Controller direction="None" canbepicked="true" msg="ItemMsgPressSelect">
      <sound file="Content/Items/Button/switch.ogg" type="OnUse" range="250.0"/>
    </Controller>

    <ConnectionPanel selectkey="Action" canbeselected = "true" msg="ItemMsgRewireScrewdriver" hudpriority="10">
      <GuiFrame relativesize="0.2,0.32" minsize="400,350" maxsize="480,420" anchor="Center" style="ConnectionPanel"/>
      <RequiredItem identifier="screwdriver" type="Equipped"/>
      <output name="signal_out"/>
    </ConnectionPanel>

    <Holdable selectkey="Select" pickkey="Use" slots="Any,RightHand,LeftHand" msg="ItemMsgDetachWrench" PickingTime="10.0"
              aimpos="35,-10" handle1="0,0" attachable="true" attachedbydefault="true" aimable="true">
      <requireditem identifier="wrench" type="Equipped"/>
    </Holdable>
  </Item>
</Items>
