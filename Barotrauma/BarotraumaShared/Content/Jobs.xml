      <Skill name="Mechanical Engineering" level="25,35"/>
      <Skill name="Weapons" level="10,30"/>
      <Skill name="Medical" level="10,20"/>
    </Skills>
    <Items>
      <Item name="ID Card" equip="true"/>
      <Item name="Wrench"/>
      <Item name="Screwdriver"/>
      <Item name="Red Wire"/>
      <Item name="Orange Jumpsuit" equip="true"/>
      <Item name="Headset" equip="true">
        <Item name="Battery Cell"/>
      </Item>
    </Items>
  </Job>

  <Job name="Mechanic" description="Mechanics are capable of fixing various mechanical devices with their high Mechanical Engineering skill. Together with engineers they ensure a submarine is working to its fullest." 
